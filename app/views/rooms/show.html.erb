<%= render "shared/header" %>
<%= render "shared/search" %>
<div class="room-detail-wrapper">
  <div class="room-detail-top">
    <%= link_to "<- 戻る", :back, class: "back-link" %>
  </div>
  <div class="room-detail-container">
    <div class="room-detail-image">
      <% if @room.room_image.attached? %>
        <%= image_tag @room.room_image, class: "large-room-image" %>
      <% else %>
        <%= image_tag "default-image.png", class: "large-room-image" %>
      <% end %>
    </div>
    <div class="room-detail-content">
      <div class="room-content-top">
        <p class="detail-title"><%= @room.name %></p>
        <p class="detail-price"><%= "¥#{@room.price}~" %></p>
      </div>
      <div class="room-content-middle">
        <p class="detail-address"><%= @room.address %></p>
        <p class="detail-introduction"><%= @room.introduction %>
      </div>
      <div class="room-content-bottom">
      <%= form_with model: @reservation, url: reservations_confirm_path, method: :post do |f| %>
        <%= f.hidden_field :room_id, value: @room.id %>
        <%= f.hidden_field :user_id, value: @user.id %>
        <div class="reservation-form">
          <div class="input-form">
            <label>チェックイン</label><br>
            <%= f.date_field  :start_date, class: "input-box" %>
          </div>
          <div class="input-form">
            <label>チェックアウト</label><br>
            <%= f.date_field :end_date, class: "input-box" %>
          </div>
          <div class="input-form">
            <label>人数</label><br>
            <%= f.text_field :people, class: "input-box" %><span>人</span>
          </div>
        </div>
        <%= f.submit "予約", class: "reservation-button" %>
      <% end %>
      </div>
    </div>
  </div>
</div>
<%= render "shared/footer" %>

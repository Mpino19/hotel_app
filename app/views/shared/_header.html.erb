<div class="partial-header">
  <div class="header-container">
    <%= link_to "Hotel Share", "/", class: "main-logo" %>

      <% if user_signed_in? %>
        <div class="dropdown">
        <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">
          <ul class="header-nav">
            <li><%= image_tag "default-avatar.png", class: "avatar-image" %></li>
            <li><%= link_to "#{current_user.id}", class: "white-letter-link" %></li>
          <span class="caret"></span>
          </ul>
        </button>
          <ul class="dropdown-menu">
            <li><%= link_to "施設の新規登録", root_path, class: "dropdown-list" %></li>
            <li class="divider"></li>
            <li><%= link_to "予約済み一覧", root_path, class: "dropdown-list" %></li>
            <li><%= link_to "登録済み一覧", root_path, class: "dropdown-list" %></li>
            <li><%= link_to "アカウント設定", root_path, class: "dropdown-list" %></li>
            <li class="divider"></li>
            <li><%= link_to "ログアウト", destroy_user_session_path, method: "delete" %></li>
          </ul>
        </div>

      <% else %>
        <ul class="header-nav">
          <li><%= link_to "ログイン", new_user_session_path, class: "white-letter-link" %></li>
          <li><%= link_to "新規登録", new_user_registration_path, class: "orange-button" %></li>
        </ul>
      <% end %>

  </div>
</div>

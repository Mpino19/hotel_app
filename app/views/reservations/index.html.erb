<%= render "shared/header" %>
  <div class="room-index-wrap">
    <div class="room-top">
      <p class="reservation-title">予約済み施設一覧</p>
    </div>
      <table class="room-table">
        <tr>
          <th>画像</th>
          <th>施設名</th>
          <th>紹介文</th>
          <th>合計料金</th>
          <th>チェックイン</th>
          <th>チェックアウト</th>
          <th>予約確定日時</th>
        </tr>
        <% @reservations.each do |reservation| %>
        <tr>
          <td>
            <% if reservation.room.room_image.attached? %>
              <%= image_tag reservation.room.room_image, class: "mini-room-image" %>
            <% else %>
              <%= image_tag "default-image.png", class: "mini-room-image" %>
            <% end %>
          </td>
          <td><%= link_to "#{reservation.room.name}", room_path(reservation.room.id) %></td>
          <td><%= reservation.room.introduction %></td>
          <td><%= "¥#{reservation.room.price*reservation.people*(reservation.end_date-reservation.start_date).to_i/1.day}" %></td>
          <td><%= reservation.start_date.strftime("%Y/%m/%d") %></td>
          <td><%= reservation.end_date.strftime("%Y/%m/%d") %></td>
          <td><%= reservation.created_at.strftime("%Y/%m/%d %H:%M") %></td>
        </tr>
        <% end %>
      </table>
  </div>
<%= render "shared/footer" %>

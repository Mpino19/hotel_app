<%= render "shared/header" %>
<div class="background-gray">
  <div class="users-form-container">
    <p class="users-new">ログイン</p>
    <%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <div class="field">
        <%= f.label :email, "メールアドレス" %><br>
        <%= f.email_field :email, autofocus: true, placeholder: "メールアドレスを入力", autocomplete: "email", class: "text-field" %>
      </div>
      <div class="field">
        <%= f.label :password, "パスワード" %><br>
        <%= f.password_field :password, placeholder: "パスワードを入力", autocomplete: "current-password", class: "text-field" %>
      </div>
      <div class="actions">
        <%= f.submit "ログイン", class: "new_account" %>
      </div>
      <%= button_to "新しいアカウントを作成", new_user_registration_path, class: "white-button" %>
    <% end %>
  </div>
</div>
